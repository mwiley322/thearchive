{% if paginate.pages > 1 %}
<div class="pagination">

  <ul>
    {% if paginate.previous %}
      <li class="prev"><a href="{{ paginate.previous.url }}"><i class="fa fa-chevron-left" aria-hidden="true"></i></a></li>
    {% else %}
      <li class="prev disabled"><a href="#" onclick="return false;"><i class="fa fa-chevron-left" aria-hidden="true"></i></a></li>
    {% endif %}

    {% for part in paginate.parts %}
      {% if part.is_link %}
        <li>{{ part.title | link_to: part.url }}</li>
      {% else %}
        {% if part.title == '&hellip;' %}
        <!-- <li class="ellipsis disabled"><a href="#" onclick="return false;">{{ part.title }}</a></li> -->
        {% else %}
        <li class="active">{{ part.title | link_to: part.url }}</li>
        {% endif %}
      {% endif %}
    {% endfor %}

    {% if paginate.next %}
      <li class="next"><a href="{{ paginate.next.url }}"><i class="fa fa-chevron-right" aria-hidden="true"></i></a></li>
    {% else %}
      <li class="next disabled"><a href="#" onclick="return false;"><i class="fa fa-chevron-right" aria-hidden="true"></i></a></li>
    {% endif %}
  </ul>
</div>
{% endif %}
