<footer class="desktop-footer desktop-display footer">
  <div class="row" style="margin-bottom: 0">
    <div class="col l6 m6 s12">
      <div class="col l4 m4 s12">
        <a href="/">
          <img class="footer__section-header-desktop" src="{{ 'logo_white.png' | asset_url }}">
        </a>
      </div>
      <div class="col l4 m4 s6">
        <ul>
          <li class="footer__section-header-desktop">SHOP</li>
          <li><a href="/collections">COLLECTIONS</a></li>
          <li><a href="/collections/new-arrivals">NEW ARRIVALS</a></li>
          <li><a href="/collections/sale">SALE</a></li>
          <li><a href="/pages/shipping-and-return-policy">RETURN POLICY</a></li>
        </ul>
      </div>
      <div class="col l4 m4 s6">
        <ul>
          <li class="footer__section-header-desktop">MORE</li>
          <li><a href="/account">MY ACCOUNT</a></li>
          <li><a href="/pages/about-us">ABOUT US</a></li>
          <li><a href="/pages/store-information">STORE INFORMATION</a></li>
          <li><a href="/blogs/news">BLOG</a></li>
          <li>
            {% include 'payment_types' %}
          </li>
        </ul>
      </div>
    </div>
    <div class="col l6 m6 s12">
      <div class="row">
        <div class="col l6 m6 s12">
          <ul>
            <li class="footer__section-header-desktop">CONTACT</li>
            <li>
              {% if shop.address.street %}
                {{ shop.address.street }}
              {% endif %}
            </li>
            <li>
              {% if shop.address.city %}
                {{ shop.address.city }},
              {% endif %}
              {% if shop.address.province %}
                {{ shop.address.province }}
              {% endif %}
              {% if shop.address.zip %}
                {{ shop.address.zip }}
              {% endif %}
            </li>
            <li>
              {% if settings.phone_number %}
                {{ settings.phone_number }}
              {% endif %}
              {% if settings.archive_email %}
                | <a href="mailto:{{ settings.archive_email }}" target="_blank">{{ settings.archive_email }}</a>
              {% endif %}
            </li>
            <li>
              {% if settings.archive_ig %}
                <a style="padding-right: 5px" href="{{ settings.archive_ig }}" target="_blank"><i class="fa fa-instagram" aria-hidden="false"></i></a>
              {% endif %}
              {% if settings.archive_fb %}
                <a href="{{ settings.archive_fb }}" target="_blank"><i class="fa fa-facebook-official" aria-hidden="false"></i></a>
              {% endif %}
            </li>
          </ul>
        </div>
        <div class="col l6 m6 s12">
          <ul>
            <li class="footer__section-header-desktop">SIGN UP</li>
            <li>Get the latest on new items, sales, and more.</li>
            <form action="//archivesf.us16.list-manage.com/subscribe/post?u=736ec7deafc03c555c1107873&amp;id=03f5cdeb54" method="post" id="subscription">
              <input id="subscription-input" type="email" name="EMAIL" id="mce-EMAIL" required placeholder="ENTER YOUR EMAIL" style="height:auto!important;font-style:none!important"></input>
              <input type="submit" id="subscription-button" value="SUBSCRIBE" name="subscribe"></input>
            </form>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="col l12 m12 s12" style="font-size: 10px">
    <ul class="lower-footer-links">
      <li style="margin: 0 0 0 10px">@{{ 'now' | date: "%Y" }} {{ shop.name | upcase }}</li>|
      <li><a href="/pages/privacy-policy">PRIVACY POLICY</a></li>|
      <li><a href="/pages/terms-and-conditions">TERMS &amp; CONDITIONS</a></li>
    </ul>
  </div>
</footer>

<footer class="mobile-display">
  <div class="col s12 m12 center" style="padding: 20px 0 30px; background-color: #2C2A29; margin-bottom: 30px">
    <p class="footer__section-header-mobile">SIGN UP</p>
    <p style="width: 180px; margin: 10px auto 15px;">Get the latest on new items, sales, and more.</p>
    <form style="justify-content:center" action="//archivesf.us16.list-manage.com/subscribe/post?u=736ec7deafc03c555c1107873&amp;id=03f5cdeb54" method="post" id="subscription">
      <input
        id="subscription-input"
        type="email"
        name="EMAIL"
        id="mce-EMAIL"
        required
        placeholder="ENTER YOUR EMAIL"
        style="font-style: none !important"
      ></input>
      <input
        type="submit"
        style="background-color: #d7cf35"
        id="subscription-button"
        value="SUBSCRIBE"
        name="subscribe"
      ></input>
    </form>
  </div>
  <div class="col s12 m12 center" id="lower-mobile-footer">
    <ul>
      <li><a href="/collections/new-arrivals">NEW ARRIVALS</a></li>
      <li><a href="/collections/all">COLLECTIONS</a></li>
      <li><a href="/collections/sale">SALE</a></li>
      <li><a href="/account">MY ACCOUNT</a></li>
      <li><a href="/pages/about-us">ABOUT US</a></li>
      <li><a href="/pages/shipping-and-return-policy">RETURN POLICY</a></li>
      <li><a href="/pages/store-information">STORE INFORMATION</a></li>
    </ul>
  </div>
  <div style="text-align: center">
    <p style="margin: 25px 0 15px 0">
      {% if settings.archive_ig %}
        <a href="{{ settings.archive_fb }}" target="_blank">
          <i style="color: #d7cf35" class="fa fa-2x fa-facebook-official" aria-hidden="false"></i>
        </a>
      {% endif %}
      {% if settings.archive_fb %}
        <a style="padding-left: 20px" href="{{ settings.archive_ig }}" target="_blank">
          <i style="color: #d7cf35" class="fa fa-2x fa-instagram" aria-hidden="false"></i>
        </a>
      {% endif %}
    </p>
    <p style="margin-bottom: 5px">
      {% if shop.address.street %}
        {{ shop.address.street }}
      {% endif %}
      {% if shop.address.city %}
        {{ shop.address.city }},
      {% endif %}
      {% if shop.address.province %}
        {{ shop.address.province}}
      {% endif %}
      {% if shop.address.zip %}
        {{ shop.address.zip }}
      {% endif %}
    </p>
    <p style="margin: 5px">
      {% if settings.phone_number %}
        {{ settings.phone_number }}
      {% endif %}
      {% if settings.archive_email %}
        | <a href="mailto:{{ settings.archive_email }}" target="_blank">{{ settings.archive_email }}</a>
      {% endif %}
    </p>
  </div>
  <div class="col l12 m12 s12" style="font-size: 10px">
    <ul class="lower-footer-links lower-footer-links-mobile">
      <li style="padding: 15px 1.3%">@{{ 'now' | date: "%Y" }} {{ shop.name | upcase }}</li>|
      <li style="padding: 15px 1.3%"><a href="/pages/privacy-policy">PRIVACY POLICY</a></li>|
      <li style="padding: 15px 1.3%"><a href="/pages/terms-and-conditions">TERMS &amp; CONDITIONS</a></li>
    </ul>
  </div>
</footer>
