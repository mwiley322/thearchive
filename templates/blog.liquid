<div class="container blog_content" style="margin-bottom: 100px">
	{% paginate blog.articles by 5 %}

	{% if current_tags %}
		<h1 class="hidden">{{ blog.title | link_to: blog.url }} &raquo; {{ current_tags.first }}</h1>
	{% else %}
		<h1 class="hidden">{{ blog.title }}</h1>
	{% endif %}

	<div>

		{% for article in blog.articles %}
		<article class="blog-article{% if forloop.first %} first{% endif %}{% if forloop.last %} last{% endif %}">
			<h5 class="blog-article-title margin-top-25">
				<a href="{{ article.url }}" class="ylw">{{ article.title | upcase }}</a>
			</h5>
			<div>
				{% if article.excerpt.size > 0 %}
					{{ article.excerpt }}
				{% else %}
					<p>{{ article.content }}</p>
				{% endif %}
			</div>
		</article>
		{% endfor %}

	</div>


	<div class="center margin-50">
		{% include 'pagination' %}
	</div>


	{% endpaginate %}
</div>
